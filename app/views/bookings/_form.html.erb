<%= simple_form_for [plant, booking] do |f| %>
<div class="d-flex justify-content-center">
  <div class="col-8">
    <%= f.input :start_date %>
    <%= f.input :end_date %>
  </div>
</div>
  <div class="d-flex justify-content-center">
  <% if booking.new_record? %>
    <%= f.button :submit, "Book", class:'btn btn-success my-5' %>
  <% else %>
    <%= f.button :submit, "Update booking", class:'btn btn-success my-5' %>
  <% end %>
  </div>
<% end %>

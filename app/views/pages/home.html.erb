<%= render "shared/banner" %>
<div class="text-center mt-5 chevron">
  <i class="fa-solid fa-chevron-down"></i>
</div>
<div class="container container-green my-5 rounded shadow-sm p-4 text-center">
  <h1 class="my-5">All Plants</h1>
  <div class="row justify-content-evenly">
    <% @plants.each do |plant| %>
      <div class="card rounded shadow-sm m-3 col-sm-8 col-md-6 col-lg-4 p-3" style="width: 18rem;">
        <%= link_to plant_path(plant) do %>
          <%# <img src="..." class="card-img-top" alt="..."> %>
          <div class="card-body">
            <p class="card-text"><%= plant.common_name %></p>
            <p>(<%= plant.latin_name %>)</p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
